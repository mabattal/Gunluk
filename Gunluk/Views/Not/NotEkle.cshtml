@model EntityLayer.Concrete.Note
@{
    ViewData["Title"] = "NotEkle";
    Layout = "~/Views/Shared/YazarLayout.cshtml";
}

<h1>Günlük Ekle</h1>
<br />
@using (Html.BeginForm("NotEkle", "Not", FormMethod.Post))
{
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.Text, 15, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Text, "", new { @class = "text-danger" })
    <br />
    <button class="btn btn-success">Kaydet</button>
}