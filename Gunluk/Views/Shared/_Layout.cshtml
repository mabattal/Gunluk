
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        .buttons {
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            font-size: 18px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            margin: 10px;
            transition: background-color 0.3s, color 0.3s;
        }

        .btn-login {
            background-color: #007bff;
            color: white;
        }

        .btn-register {
            background-color: #28a745;
            color: white;
        }

        .btn:hover {
            background-color: #333;
            color: white;
        }
    </style>
</head>
<body>
    <h1>Hoşgeldiniz!</h1>
    <p>Lütfen aşağıdaki seçeneklerden birini seçin:</p>
    <div class="buttons">
        <a href="/giris" class="btn btn-login">Giriş Yap</a>
        <a href="/kayit" class="btn btn-register">Kayıt Ol</a>
    </div>
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
